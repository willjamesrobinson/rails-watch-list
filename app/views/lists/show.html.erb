<nav class="navbar navbar-light bg-light">
  <div></div>
  <div>
      <%= link_to "Back to Lists",  lists_path, class: "btn btn-outline-success"%>
      <%= link_to "Add movie to List",  new_list_bookmark_path(@list), class: "btn btn-outline-danger"%>

  </div>
</nav>

<h1><%= @list.name %></h1>
<div class = "row">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card m-2" style="width: 18rem;">
      <img class="card-img-top mt-2" style="height: 393px;" src="<%=bookmark.movie.poster_url%>">
      <div class="card-body">
        <h5 class="card-title"><%=bookmark.movie.title%></h5>
        <p class="card-text"><%=bookmark.movie.overview%></p>
      </div>
    </div>
  <% end %>
</div>
